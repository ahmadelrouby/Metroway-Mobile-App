<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:id="@+id/draggableLayout"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:background="@drawable/white_border"
    android:layout_marginHorizontal="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="22sp"
        android:text="Trip Details"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:textAlignment="center"
        fontPath="ad_font.ttf"
        tools:ignore="MissingPrefix" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/train"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:id="@+id/train_image"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/car"
            android:layout_alignParentRight="true"
            android:id="@+id/car_image"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Metro"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="75dp"
            fontPath="ad_font.ttf"
            tools:ignore="MissingPrefix" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car"
            android:layout_alignParentRight="true"
            android:layout_marginRight="85dp"
            fontPath="ad_font.ttf"
            tools:ignore="MissingPrefix"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 hrs 50 mins"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="53dp"
            android:id="@+id/metro_time"
            fontPath="ad_font.ttf"
            tools:ignore="MissingPrefix"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 hrs 50 mins"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:id="@+id/car_time"
            fontPath="ad_font.ttf"
            tools:ignore="MissingPrefix"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 Stations"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:id="@+id/metro_distance"
            android:textColor="#808080"
            fontPath="ad_font.ttf"
            tools:ignore="MissingPrefix"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35 KM"
            android:layout_alignParentRight="true"
            android:layout_marginRight="75dp"
            android:id="@+id/car_distance"
            android:textColor="#808080"
            fontPath="ad_font.ttf"
            tools:ignore="MissingPrefix"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:background="#000"
            android:layout_margin="10dp"
            android:id="@+id/trip_confirm"
            fontPath="ad_font.ttf"
            tools:ignore="MissingPrefix"/>
    </RelativeLayout>
    
</LinearLayout>